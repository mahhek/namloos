<h3>Applies To&nbsp;&nbsp;&nbsp;<%= link_to_function 'Add +', "fetch_object('#{new_apply_to_path}');", :class => "functional_link" %></h3>
<div style="background-color: #eeeeee;float: left;" id="add_edit_form">

</div>
<table width="650" class="datatable">
  <tr style="border-bottom: 1px solid #999999;">
    <th>Name:</th>
    <th></th>
    <th></th>
  </tr>

  <% @apply_tos.each do |apply_to| %>
    <tr>
      <td width="500"><%= apply_to.name %></td>
      <td><%= link_to_function (image_tag 'edit-icon-small.gif'), "fetch_object('#{edit_apply_to_path(apply_to)}')", :class => "functional_link"  %></td>
      <td><%= link_to (image_tag 'trash.png'), apply_to, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>
