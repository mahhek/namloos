<h3>Applies To&nbsp;&nbsp;&nbsp;<%= link_to '+', new_apply_to_path, :remote =>  true, :style => "text-decoration:none;" %></h3>
<table width="650" class="datatable">
  <tr style="border-bottom: 1px solid #999999;">
    <th>Name:</th>
    <th></th>
    <th></th>
  </tr>

  <% @apply_tos.each do |apply_to| %>
    <tr>
      <td width="500"><%= apply_to.name %></td>
      <td><%= link_to (image_tag 'edit-icon-small.gif'), edit_apply_to_path(apply_to) %></td>
      <td><%= link_to (image_tag 'trash.png'), apply_to, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>
