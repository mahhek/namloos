<h3>Groups&nbsp;&nbsp;&nbsp;<%= link_to_function 'Add +', "set_cursor('#group_name');", :class => "functional_link" %></h3>

<div class="datatable" >
  <div class="datatable_header">
    <span style="width: 165px;">Name</span>
  </div>

  <% @groups.each do |group| %>

    <div class="rows" id="group_<%= group.id %>">
      <div class="row-column" style="width: 550px;"><%= group.name %></div>

      <div class="row-column" style="width: 50px;"><%= link_to_function (image_tag 'edit-icon-small.gif'), "fetch_object('#{edit_group_path(group)}', '#group_#{group.id}' );", :class => "functional_link"  %></div>
      <div class="row-column" style="width: 30px;"><%= link_to (image_tag 'trash.png'), group, confirm: 'Are you sure?', method: :delete %></div>
    </div>
  <% end %>
</div>

<div class="add_form">
  <h3>New Group</h3>
  <%= render 'form' %>
</div>
