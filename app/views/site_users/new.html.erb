<%= "Register for Namloos" %>

<%= form_for @user, :url => "/site_users/create" do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this seller_rate from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= f.label :email %><br />
    <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
    <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :group %><br />
    <%= select_tag "role", options_from_collection_for_select(@groups, "id", "name") %>
  </p>

  <p><b>Extensions</b>
    <% @extensions.each do|e| %>
      <%= check_box_tag "extensions[#{e.name}]", e.name,@user.extensions.include?(e)? true : false %>
      <%= e.name %>
    <% end %>
  </p>
  <p><%= f.submit "Sign up" %></p>
<% end %>