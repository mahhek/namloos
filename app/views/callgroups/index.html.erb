<h3>Call Groups&nbsp;&nbsp;&nbsp;<%= link_to_function 'Add +', "set_cursor('#callgroup_name');", :class => "functional_link" %></h3>

<div class="datatable" >
  <div class="datatable_header">
    <span style="width: 150px;">Name:</span>
  </div>

  <% @callgroups.each do |callgroup| %>

    <div class="rows" id="callgroup_<%= callgroup.id %>">
      <div class="row-column" style="width: 500px;"><%= callgroup.name%></div>
      <div class="row-column" style="width: 50px;"><%= link_to_function (image_tag 'edit-icon-small.gif'), "fetch_object('#{edit_callgroup_path(callgroup)}', '#callgroup_#{callgroup.id}' );", :class => "functional_link"  %></div>
      <div class="row-column" style="width: 30px;"><%= link_to (image_tag 'trash.png'), callgroup, confirm: 'Are you sure?', method: :delete %></div>
    </div>
  <% end %>
</div>


<div class="add_form">
  <h3>New Call Group</h3>
  <%= render 'form' %>
</div>
