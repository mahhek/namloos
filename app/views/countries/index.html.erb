<h3>Countries</h3>

<table width="650" class="datatable">
  <tr>
    <th>Name:</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td width="500"><%= country.name %></td>
    <td><%= link_to 'Show', country %></td>
    <td><%= link_to 'Edit', edit_country_path(country) %></td>
    <td><%= link_to (image_tag 'trash.png'), country, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

