<h3>Privileges&nbsp;&nbsp;&nbsp;<%= link_to_function 'Add +', "fetch_object('#{new_privilege_path}');", :class => "functional_link" %></h3>


<table width="650" class="datatable">
  <tr style="border-bottom: 1px solid #999999;">
    <th>Privileges Types:</th>
    <th></th>
    <th></th>
  </tr>

  <% @privileges.each do |privilege| %>
    <tr>
      <td width="500"><%= privilege.name %></td>
      <td><%= link_to_function (image_tag 'edit-icon-small.gif'), "fetch_object('#{edit_privilege_path(privilege)}')", :class => "functional_link"  %></td>
      <td><%= link_to (image_tag 'trash.png'), privilege, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<div style="background-color: #eeeeee;float: left;" id="add_edit_form">

</div>